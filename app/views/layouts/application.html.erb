<!DOCTYPE html>
<html>
<head>
  <title>SuperPost</title>
  <%= stylesheet_link_tag    'application', media: 'all', 'data-turbolinks-track' => true %>
  <%= javascript_include_tag 'application', 'data-turbolinks-track' => true %>
  <%= csrf_meta_tags %>
</head>
<body>

	<nav class="navbar navbar-default">
    <div class="navbar-header">
    <button type="button" class="navbar-toggle" data-toggle="collapse"
            data-target=".navbar-ex1-collapse">
      <span class="sr-only">Desplegar navegaci√≥n</span>
      <span class="icon-bar"></span>
      <span class="icon-bar"></span>
      <span class="icon-bar"></span>
    </button>
    <a class="navbar-brand" href="#">SuperBlog</a>
  </div>

		<div class="container">

			<ul class="nav navbar-nav navbar-right">

				<% if signed_in? %>
  					<li><%= link_to "Nuevo Post", new_post_path %></li>
            <li><%= link_to "Salir", logout_path, method: :delete %></li>
          <% else %>
            <li><%= link_to "Registrarse", new_user_path %></li>
  					<li><%= link_to "Ingresar", login_path %></li>
				<% end %>

			</ul>

		</div>

	</nav>

	<p class="notice"><%= notice %></p>
  <p class="alert"><%= alert %></p>

  <div class="container">
		<%= yield %>
	</div>

</body>
</html>
